{
  "info": {
    "name": "Reviews API",
    "description": "Postman collection for testing the Reviews API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Review",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": 1,\n  \"productId\": 2,\n  \"rating\": 5,\n  \"title\": \"Excellent product!\",\n  \"review_text\": \"This product exceeded my expectations. Great quality and fast delivery.\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/reviews",
          "host": ["{{base_url}}"],
          "path": ["api", "reviews"]
        }
      }
    },
    {
      "name": "Get All Reviews",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/reviews?limit=10&offset=0",
          "host": ["{{base_url}}"],
          "path": ["api", "reviews"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "offset",
              "value": "0"
            }
          ]
        }
      }
    },
    {
      "name": "Get Reviews by Product ID",
      "request": {
        "method": "GET",
