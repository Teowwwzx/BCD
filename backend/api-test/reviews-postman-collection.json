          "raw": "{{base_url}}/api/reviews?userId=1&limit=10&offset=0",
          "host": ["{{base_url}}"],
          "path": ["api", "reviews"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "offset",
              "value": "0"
            }
          ]
        }
      }
    },
