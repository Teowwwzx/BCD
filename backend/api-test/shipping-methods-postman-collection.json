{
    "info": {
        "name": "Shipping Methods API",
        "description": "API collection for testing shipping methods endpoints in BCD Marketplace",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [{
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "authToken",
            "value": "",
            "type": "string"
        },
        {
            "key": "shippingMethodId",
            "value": "1",
            "type": "string"
        }
    ],
    "item": [{
            "name": "Create Shipping Method (Admin)",
            "request": {
                "method": "POST",
                "header": [{
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{authToken}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Express Delivery\",\n    \"description\": \"Fast delivery within 1-2 business days\",\n    \"baseRate\": \"15.00\",\n    \"perKgRate\": \"2.50\",\n    \"perKmRate\": \"0.10\",\n    \"minDeliveryDays\": 1,\n    \"maxDeliveryDays\": 2\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/shipping-methods",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "shipping-methods"]
                }
            },
            "response": []
        },
        {
            "name": "Get All Shipping Methods",
            "request": {
                "method": "GET",
                "header": [{
                    "key": "Authorization",
                    "value": "Bearer {{authToken}}"
                }],
                "url": {
                    "raw": "{{baseUrl}}/api/shipping-methods",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "shipping-methods"]
                }
            },
            "response": []
        },
        {
            "name": "Get All Shipping Methods (Include Inactive)",
            "request": {
                "method": "GET",
                "header": [{
                    "key": "Authorization",
                    "value": "Bearer {{authToken}}"
                }],
                "url": {
                    "raw": "{{baseUrl}}/api/shipping-methods?includeInactive=true",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "shipping-methods"],
                    "query": [{
                        "key": "includeInactive",
                        "value": "true"
                    }]
                }
            },
            "response": []
        },
        {
            "name": "Get Shipping Method by ID",
            "request": {
                "method": "GET",
                "header": [{
                    "key": "Authorization",
                    "value": "Bearer {{authToken}}"
                }],
                "url": {
                    "raw": "{{baseUrl}}/api/shipping-methods/{{shippingMethodId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "shipping-methods", "{{shippingMethodId}}"]
                }
            },
            "response": []
        },
        {
            "name": "Update Shipping Method (Admin)",
            "request": {
                "method": "PUT",
                "header": [{
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{authToken}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Updated Express Delivery\",\n    \"baseRate\": \"18.00\",\n    \"description\": \"Updated fast delivery service\",\n    \"isActive\": true\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/shipping-methods/{{shippingMethodId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "shipping-methods", "{{shippingMethodId}}"]
                }
            },
            "response": []
        },
        {
            "name": "Delete Shipping Method (Admin)",
            "request": {
                "method": "DELETE",
                "header": [{
                    "key": "Authorization",
                    "value": "Bearer {{authToken}}"
                }],
                "url": {
                    "raw": "{{baseUrl}}/api/shipping-methods/{{shippingMethodId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "shipping-methods", "{{shippingMethodId}}"]
                }
            },
            "response": []
        },
        {
            "name": "Calculate Shipping Cost",
            "request": {
                "method": "POST",
                "header": [{
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{authToken}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"shippingMethodId\": 1,\n    \"totalWeight\": 2.5,\n    \"distance\": 150,\n    \"destinationPostcode\": \"10001\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/shipping-methods/calculate",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "shipping-methods", "calculate"]
                }
            },
            "response": []
        },
