            {
              "key": "productId",
              "value": "2"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "offset",
              "value": "0"
            }
          ]
        }
      }
    },
    {
      "name": "Get Wishlist Item by ID",
      "request": {
        "method": "GET",
