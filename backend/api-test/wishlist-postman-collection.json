          "host": ["{{base_url}}"],
          "path": ["api", "wishlist"],
          "query": [
            {
              "key": "userId",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "offset",
              "value": "0"
            }
          ]
        }
      }
