{
  "info": {
    "name": "Wishlist API",
    "description": "Postman collection for testing the Wishlist API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add Item to Wishlist",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": 1,\n  \"productId\": 2\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/wishlist",
          "host": ["{{base_url}}"],
          "path": ["api", "wishlist"]
        }
      }
    },
    {
      "name": "Get All Wishlist Items",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/wishlist?limit=10&offset=0",
          "host": ["{{base_url}}"],
          "path": ["api", "wishlist"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "offset",
              "value": "0"
            }
          ]
        }
      }
    },
    {
      "name": "Get Wishlist by User ID",
      "request": {
